@model IEnumerable<ResumeManagement.Models.Package>

@{
    ViewBag.Title = "Index";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i> Package</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/">Home</a></li>
                    <li><i class="fa fa-bars"></i>Package</li>
                </ol>
            </div>
        </div>
        <!-- page start -->
        <div class="row">
            <div class="col-lg-12">
                @if (Request.IsAuthenticated == true)
                {
                    <a class="btn btn-info btn-lg btn-block btn-add-sales-item" href="/Packages/Create">Add Package</a>
                }
                <section class="panel">
                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th>
                                    <i class="icon_info"></i> @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    <i class="icon_usd"></i> @Html.DisplayNameFor(model => model.CVLetter.Name)
                                </th>
                                <th>
                                    <i class="icon_usd"></i> @Html.DisplayNameFor(model => model.Resume.Name)
                                </th>
                                <th>
                                    <i class="icon_calendar"></i> @Html.DisplayNameFor(model => model.CreateDate)
                                </th>
                                <th>
                                    <i class="icon_calendar"></i> @Html.DisplayNameFor(model => model.EditDate)
                                </th>
                                @if (Request.IsAuthenticated == true)
                                {
                                    <th><i class="icon_cogs"></i> Action</th>
                                }
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr data-link="/Packages/Details/" data-id="@Html.DisplayFor(modelItem => item.PackageId)">
                                    <td class="row">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="row">
                                        @Html.DisplayFor(modelItem => item.CVLetter.Name)
                                    </td>
                                    <td class="row">
                                        @Html.DisplayFor(modelItem => item.Resume.Name)
                                    </td>
                                    <td class="row">
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td class="row">
                                        @Html.DisplayFor(modelItem => item.EditDate)
                                    </td>
                                    @if (Request.IsAuthenticated == true)
                                    {
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary" href="/Packages/Edit/@Html.DisplayFor(modelItem => item.PackageId)">Edit</a>
                                                @using (Html.BeginForm("Delete", "Packages", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                                                {
                                                    @Html.AntiForgeryToken()

                                                    <div class="form-actions no-color">
                                                        <input type="hidden" name="PackageId" value="@Html.DisplayFor(modelItem => item.PackageId)" />
                                                        <input type="button" value="Delete" class="btn btn-danger trigger-item-delete" />
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>