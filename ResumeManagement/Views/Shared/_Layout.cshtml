            instrumentationKey: '26e8fe8b-f847-4f05-a5b3-b5ccec1346d7'
        });

        window.appInsights = appInsights;
        appInsights.trackPageView();
    </script>
</head>

<body>

    <!-- container section start -->
    <section id="container" class="">
        <!--header start-->

        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Toggle Navigation" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="/" class="logo">Resume <span class="lite">Management</span></a>
            <!--logo end-->
            @if (Request.IsAuthenticated == true)
            {
            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="username">@User.Identity.GetUserName()</span>
                        </a>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
            }
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="">
                        <a class="" href="/Resumes">
                            <i class="icon_table"></i>
                            <span>Resumes</span>
                        </a>
                    </li>
                    <li class="">
                        <a class="" href="/CVLetters">
                            <i class="icon_table"></i>
                            <span>CV Letters</span>
                        </a>
                    </li>
                    <li class="">
                        <a class="" href="/Packages">
                            <i class="icon_table"></i>
                            <span>Packages</span>
                        </a>
                    </li>

                    <li class="">
                        <a class="" href="/Home/About">
                            <i class="icon_genius"></i>
                            <span>About</span>
                        </a>
                    </li>
                    <li class="">
                        <a class="" target="new" href="http://junyeongyu.com">
                            <i class="icon_desktop"></i>
                            <span>Portfolio</span>
                        </a>
                    </li>

                    @if (Request.IsAuthenticated == false)
                    {
                        <li class="sub-menu">
                            <a href="/Account/Register" class="">
                                <i class="icon_document_alt"></i>
                                <span>Register</span>
                            </a>
                        </li>
                        <li class="sub-menu">
                            <a href="/Account/Login" class="">
                                <i class="icon_desktop"></i>
                                <span>Login</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                        }
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="icon_genius"></i>
                                <span>Logout</span>
                            </a>
                        </li>

                    }

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->

        <!--Body-->
        @RenderBody()

        <!--Footer-->
        <div class="text-right">
            <div class="credits">
                Made by <a target="new" href="http://junyeongyu.com/">Junyeong Yu</a>
            </div>
        </div>
    </section>

    <!-- container section end -->
    <!-- javascripts -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <!-- nice scroll -->
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script><!--custome script for all page-->
    <script src="/js/scripts.js"></script>
    <!-- custom -->
    <script src="/js/custom.js"></script>
</body>
</html>